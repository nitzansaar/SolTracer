{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "../../dist/tests",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": [
      "../@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "*": ["../../node_modules/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 